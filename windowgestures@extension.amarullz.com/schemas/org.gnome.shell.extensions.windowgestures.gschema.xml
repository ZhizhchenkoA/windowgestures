<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.windowgestures"
        path="/org/gnome/shell/extensions/windowgestures/">

        <key name="no-count-flip" type="b">
            <default>false</default>
            <summary>Keep System Gesture</summary>
            <description>
                If true, extension will not hook system gesture events but Use 3 Fingers config cannot be used. Need re-enable extension to take effect
            </description>
        </key>

        <key name="three-finger" type="b">
            <default>false</default>
            <summary>Use 3 Fingers</summary>
            <description>
                If true, window gestures will use three fingers, and workspace will use four finger
            </description>
        </key>

        <key name="horiz-swap-switch" type="b">
            <default>false</default>
            <summary>Horizontal Swipe Always Switch Windows</summary>
            <description>
                If true, Horizontal swipe will always switching windows
            </description>
        </key>

        <key name="use-active-window" type="b">
            <default>false</default>
            <summary>Handle Active Window</summary>
            <description>
                If true, gesture will control active window rather than window on current pointer. This will disable resize function
            </description>
        </key>

        <key name="fn-resize" type="b">
            <default>true</default>
            <summary>Enable Resize</summary>
            <description>
                Enable resize window if cursor on resize edges
            </description>
        </key>

        <key name="fn-move" type="b">
            <default>true</default>
            <summary>Enable Move</summary>
            <description>
                Enable move function
            </description>
        </key>

        <key name="fn-maximized-snap" type="b">
            <default>true</default>
            <summary>Enable Maximized Snap</summary>
            <description>
                Enable swipe up then left/right gesture to maximized to side
            </description>
        </key>

        <key name="fn-move-snap" type="b">
            <default>true</default>
            <summary>Enable Move Snap</summary>
            <description>
                Enable snapping window when moving.
            </description>
        </key>



        <key name="pinch-enable" type="b">
            <default>true</default>
            <summary>Enable Pinch</summary>
            <description>
                Enable pinch gesture
            </description>
        </key>
        <key type="i" name="pinch3-in">
            <default>0</default>
            <summary>Pinch-In 3 Fingers</summary>
            <range min="0" max="15"/>
        </key>
        <key type="i" name="pinch3-out">
            <default>0</default>
            <summary>Pinch-Out 3 Fingers</summary>
            <range min="0" max="15"/>
        </key>
        <key type="i" name="pinch4-in">
            <default>0</default>
            <summary>Pinch-In 4 Fingers</summary>
            <range min="0" max="15"/>
        </key>
        <key type="i" name="pinch4-out">
            <default>0</default>
            <summary>Pinch-Out 4 Fingers</summary>
            <range min="0" max="15"/>
        </key>

        <key type="i" name="pinch-in-scale">
            <default>60</default>
            <summary>Pinch-In Scale</summary>
            <range min="30" max="80"/>
        </key>
        <key type="i" name="pinch-out-scale">
            <default>140</default>
            <summary>Pinch-In Scale</summary>
            <range min="120" max="200"/>
        </key>

        


        <key type="i" name="edge-size">
            <default>32</default>
            <summary>Edge Size for Resize</summary>
            <description>
                Number of pixel from window egdes to determine resize action
            </description>
            <range min="16" max="96"/>
        </key>

        <key type="i" name="top-edge-size">
            <default>64</default>
            <summary>Title Edge size</summary>
            <description>
                Number of pixel from top of window to determine move action
            </description>
            <range min="16" max="96"/>
        </key>

        <key type="i" name="gesture-threshold">
            <default>32</default>
            <summary>Gesture Threshold</summary>
            <range min="16" max="64"/>
        </key>

        <key type="i" name="gesture-cancel-threshold">
            <default>8</default>
            <summary>Gesture Cancel Threshold</summary>
            <range min="4" max="32"/>
        </key>

        <key type="i" name="gesture-acceleration">
            <default>15</default>
            <summary>Gesture Acceleration</summary>
            <range min="10" max="25"/>
        </key>
    </schema>
</schemalist>